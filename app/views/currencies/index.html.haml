- title "Currencies"

- content_for :breadcrumb do
  = breadcrumb [ link_to("Administrations", administrations_path), link_to("Currencies", currencies_path) ]

  = sidemenu @tab

- content_for :main_act do
  = link_to "#{image_tag('icons/silk/add.png')} New Currencies", new_currency_path, :class => 'main_link'

%table.list
  %tr
    %th Code
    %th Name
    %th Symbol
    %th.actions Actions
  - for currency in @currencies
    %tr
      %td= link_to h(currency.code), currency
      %td= h currency.name
      %td= h currency.symbol
      %td.actions
        = link_to image_tag('icons/silk/application_form_edit.png'), edit_currency_path(currency)
        = link_to image_tag('icons/silk/delete.png'), currency_path(currency), :confirm => 'Are you sure?', :method => :delete
