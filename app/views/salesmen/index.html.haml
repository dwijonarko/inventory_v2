- title "Salesmen"

- content_for :breadcrumb do
  = breadcrumb [ link_to("Administrations", administrations_path), link_to("Salesmen", salesmen_path) ]
  #top_right_link
    - form_for @search do |f|
      = f.text_field :code_or_profile_first_name_or_profile_last_name_like
      = f.submit 'search'

  = sidemenu @tab

= hint 'Click "Create Salesman" button to add new Salesman'

#subheader
  %h3 Salesman
  #subheader-menu
    = link_to "#{image_tag('icons/silk/add.png')} Create Salesman", new_salesman_path, :class => 'main_link'

%table.list
  %tr
    %th Code
    %th Name
    %th.actions Actions
  - for salesman in @salesman
    %tr
      %td= link_to h(salesman.code)
      %td= h salesman.profile.full_name
      %td.actions
        = link_to image_tag('icons/silk/application_form_edit.png'), edit_salesman_path(salesman)
        = link_to image_tag('icons/silk/delete.png'), salesman_path(salesman), :confirm => 'Are you sure?', :method => :delete
