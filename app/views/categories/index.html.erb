<% cache do %>
  <% title "Categories" %>

  <% javascript 'categories' %>
  <% content_for :breadcrumb do %>
    <%= breadcrumb [ link_to("Administrations", administrations_path),
                     "Categories" ] %>
  <% end -%>

  <% content_for :main_act do %>
    <%= link_to "#{image_tag('icons/silk/add.png')} Create new category", new_category_path, :class => "main_link new_category" %>
  <% end -%>

  <table id="categories_list">
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
    <%= render @categories %>
  </table>
<% end -%>
