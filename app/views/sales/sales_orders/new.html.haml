- title "New Sales Order"

- if @project
  - content_for :breadcrumb do
    = breadcrumb [ link_to('Transactions', transactions_path), |
      link_to("Projects", projects_path), |
      link_to(@project.number, @project), |
      link_to('Sales Orders', project_sales_orders_path(@project)), |
      'New' ] |
- else
  - content_for :breadcrumb do
    = breadcrumb [ link_to('Transactions', transactions_path), |
      'Sales', |
      link_to('Sales Orders', sales_sales_orders_path), |
      'New' ] |

  = sidemenu @tab

= hint ""
#subheader
  %h3 Create new sales order
  #subheader-menu
    - if @project
      = link_to "#{image_tag('icons/silk/arrow_left.png')} back", project_sales_orders_path(@project)
    - else
      = link_to "#{image_tag('icons/silk/arrow_left.png')} back", sales_sales_orders_path
    
= render :partial => 'form'
