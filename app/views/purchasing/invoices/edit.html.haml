- title "Edit Purchase Invoice"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Transactions', transactions_path), |
    'Purchasing', |
    link_to('Purchase Invoice', purchasing_invoices_path), |
    link_to(@invoice.number, [:purchasing, @invoice]), |
    'Edit' ] |

  = sidemenu @tab

= hint "Select one of the transaction type first to show the transaction form"

#subheader
  %h3= "Edit Purchase Invoice # #{@invoice.number}"
  #subheader-menu
    = link_to "#{image_tag('icons/silk/arrow_left.png')} back", purchasing_invoices_path, :class => "back_link"
= render :partial => 'form'
