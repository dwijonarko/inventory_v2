- title "Edit Credit Debit Note"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Transactions', transactions_path), |
    link_to('Credit Debit Notes', credit_debit_notes_path), |
    link_to("#{@credit_debit_note.number}", @credit_debit_note), |
    'Edit' ] |

  = sidemenu @tab

= hint "Select one of the transaction type first to show the transaction form"

#subheader
  %h3= "Edit #{@credit_debit_note.credit? ? 'credit' : 'debit'} note # #{@credit_debit_note.number}"
  #subheader-menu
    = link_to "#{image_tag('icons/silk/arrow_left.png')} back", @credit_debit_note

= render :partial => 'form'
