- title "Item Receive"

#customer
  #customer-title Delivery Order

%table#metaleft
  %tr
    %td.metaleft-head  To :
    %td= @delivery_order.customer

%table#meta
  %tr
    %td.meta-head Number #
    %td= @delivery_order.number
  %tr
    %td.meta-head Date
    %td= @delivery_order.do_date.to_s(:long)

%table#items
  %tr
    %th.number No.
    %th.quantity Code Item
    %th.name Item
    %th.quantity Qty
    %th.desc description
  - @delivery_order.entries.each_with_index do |entry, i|
    %tr.item-row
      %td= (i+1)
      %td.qty= entry.item.code
      %td.name=  entry.item.name
      %td.qty= entry.quantity
      %td.desc

<p align="right">By,&nbsp;&nbsp;&nbsp;&nbsp;</p>

