<tr class='<%= cycle("odd","even") %> lvl_<%= category.level %> cat_<%= category.id %>'>
  <td class="<%= "root_category" if category.root? %> subcategories_count">
    <%= "<span>#{category.children.length}</span>" unless category.leaf? %>
  </td>
  <td class='<%= "lvl_#{category.level}" %>'>
    <%=h category.code %>
  </td>
  <td class='<%= "lvl_#{category.level}" %>'>
    <%= link_to category.name, category, :class => "category_detail" %>
  </td>
  <td><%=h truncate(category.description) %></td>
  <td class="actions">
    <%= link_to(image_tag('icons/silk/table.png'), category_items_path(category), :title => 'Items List') if category.leaf? %>
    <%= link_to image_tag('icons/silk/application_form_edit.png'), edit_category_path(category), :class => "edit_category", :title => "Edit Category" %>
    <%= link_to image_tag('icons/silk/delete.png'), category, :confirm => 'Are you sure?', :method => :delete, :title => 'Delete Category' %>
  </td>
</tr>
