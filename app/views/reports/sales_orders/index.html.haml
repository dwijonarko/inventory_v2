- title "Sales Orders Report"
= hint "Select the kind of report you want to see"
- content_for :breadcrumb do
  = breadcrumb [ link_to('Reports', reports_path), |
    "Sales Orders" ] |

%fieldset.plain
  %legend Filter
  - form_tag reports_sales_orders_path, :method => :get do
    %p.date_range
      = label_tag 'until', 'Report per '
      = text_field_tag 'until', @until, :class => 'datepicker'
      %button{ :type => :submit } Go
      = link_to "#{image_tag('icons/silk/page_white_acrobat.png')} download PDF", reports_sales_orders_path(:format => :pdf)

#items
  %table.list
    %tr
      %th SO Number
      %th Date
      %th Cust. ID
      %th Cust. Name
      %th Total Bruto
      %th Total Disc
      %th Total Netto
    - for sales_order in @sales_orders
      %tr
        %td= sales_order.number
        %td= sales_order.tanggal
        %td= sales_order.customer_id
        %td= sales_order.customer
        %td= sales_order.vat
        %td= sales_order.vat
        %td= sales_order.vat
