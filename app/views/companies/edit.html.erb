<% title "Account :: Company" -%>
<% content_for :breadcrumb do -%>
  <%= 
    breadcrumb [ link_to('Administrations', administrations_path),
    'Company', "#{ link_to current_company.name, current_company }" ]
  %>
<% end %>

<%= sidemenu @tab %>

<%= hint "Company name must be unique" %>

<div id="subheader">
  <h3>Edit <%= current_company.name %></h3>
  <div id="subheader-menu">
    <%= link_to "#{image_tag('icons/silk/arrow_left.png')} back", current_company %>
  </div>
</div>

<%= render 'form' %>
