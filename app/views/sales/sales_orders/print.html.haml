- title "Sales Ordes"

#customer
  #customer-title
    =@sales_order.customer

%table#meta
  %tr
    %td.meta-head Number #
    %td= @sales_order.number
  %tr
    %td.meta-head Date
    %td= @sales_order.tanggal


%table#items
  %tr
    %th.number No.
    %th.name Item
    %th.desc Description
    %th.quantity Quantity
    %th.price Price
  - @sales_order.entries.each_with_index do |entry, i|
    %tr.item-row
      %td= (i+1)
      %td.name=  entry.item.name
      %td.desc= entry.description
      %td.qty= entry.quantity
      %td.price= entry.price

