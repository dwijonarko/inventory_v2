- title "Edit Purchasing/Purchase Order"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Transactions', transactions_path), |
    'Purchasing', |
    link_to('Purchase Orders', purchasing_purchase_orders_path), |
    "Purchasing Order # #{link_to h(@purchase_order.number), [:purchasing, @purchase_order]}", |
    'Edit Purchase Order' ] |

  = sidemenu @tab

= hint "Select one of the transaction type first to show the transaction form"

#subheader
  %h3= "Edit purchase order # #{@purchase_order.number}"
  #subheader-menu
    = link_to "#{image_tag('icons/silk/arrow_left.png')} back to purchase order list", purchasing_purchase_orders_path, :class => "back_link"
    = link_to "Purchase Order detail", [:purchasing, @purchase_order], :class => "back_link"
= render :partial => 'form'
