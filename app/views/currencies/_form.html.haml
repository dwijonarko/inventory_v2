- semantic_form_for @currency do |f|
  = f.error_messages
  - f.inputs "Currency", :class => "form_section" do
    = f.input :code, :label => "Code"
    = f.input :name, :label => "Name"
    = f.input :symbol, :label => "Symbol"
    = f.input :default, :label => "Use as default"
  %fieldset.buttons
    %button#primary-button{ :type => "submit" }
      = image_tag 'icons/silk/disk.png'
      Save Currency
