- semantic_form_for @role do |f|
  = f.error_messages
  - f.inputs 'Role', :class => 'form_section' do
    = f.input :name
  - f.inputs 'Privileges', :class => 'form_section' do
    - PRIVILEGES.each do |key, val|
      %li
        %label= key.titleize
        .group
          - val.each do |title, priv|
            %label{ :for => "#{priv}_resource" }
              = check_box_tag 'role[privilege_resources][]', priv, @role.has_privilege?(priv), :id => "#{priv}_resource"
              &nbsp;
              = title
  %fieldset.buttons
    %button{ :type => :submit, :id => 'primary-button' }
      = image_tag 'icons/silk/disk.png'
      Save role
