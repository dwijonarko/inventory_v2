- title "Edit Purchasing/Purchase Order"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Transactions', transactions_path), |
    'Purchasing', |
    link_to('Purchase Orders', purchasing_purchase_orders_path), |
    "#{link_to h(@purchase_order.number), [:purchasing, @purchase_order]}", |
    'Edit' ] |

  = sidemenu @tab

= hint "Select one of the transaction type first to show the transaction form"

#subheader
  %h3= "Edit purchase order # #{@purchase_order.number}"
  #subheader-menu
    = link_to "#{image_tag('icons/silk/arrow_left.png')} back to list", purchasing_purchase_orders_path
    &bull;
    = link_to "#{image_tag('icons/silk/application_view_detail.png')} detail", [:purchasing, @purchase_order]

= render :partial => 'form'
