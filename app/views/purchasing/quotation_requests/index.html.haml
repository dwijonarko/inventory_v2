- title "Purchasing::Quotation Requests"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Transactions', transactions_path), |
    'Purchasing', 'Quotation Request' ] |

  = sidemenu @tab

- content_for :main_act do
  = link_to "#{image_tag('icons/silk/add.png')} New Quotation Request", new_purchasing_quotation_request_path, :class => 'main_link'

%table
  %tr
    %th Company
    %th Number
    %th Request date
    %th Description
  - for quotation_request in @quotation_requests
    %tr
      %td= h quotation_request.company_id
      %td= h quotation_request.number
      %td= h quotation_request.request_date
      %td= h quotation_request.description
      %td= link_to 'Show', [:purchasing, quotation_request]
      %td= link_to 'Edit', edit_purchasing_quotation_request_path(quotation_request)
      %td= link_to 'Destroy', [:purchasing, quotation_request], :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Purchasing/Quotation Request", new_purchasing_quotation_request_path
