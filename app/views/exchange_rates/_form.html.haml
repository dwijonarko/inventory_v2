- semantic_form_for [@currency, @exchange_rate] do |f|
  = f.error_messages
  -f.inputs "Excange Rates", :class => "form_section" do
    = f.input :effective_date, :as => :string, :input_html => { :class => "datepicker" }
    = f.input :value, :label => "value"
  %fieldset.buttons
    %button#primary-button{ :type => "submit" }
      = image_tag 'icons/silk/disk.png'
      Save Exchange Rate
