- title "Edit Purchasing::Quotation Request"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Transactions', transactions_path), |
    'Purchasing', |
    link_to('Quotation Requests', purchasing_quotation_requests_path), |
    "#{link_to @quotation_request.number, [:purchasing, @quotation_request]}", |
    'Edit' ] |

  = sidemenu @tab

= hint "Number and Request Date cannot be empty"

#subheader
  %h3= "Edit Quotation Request # #{@quotation_request.number}"
  #subheader-menu
    = link_to "#{image_tag('icons/silk/arrow_left.png')} back to list", purchasing_quotation_requests_path
    &bull;
    = link_to "#{image_tag('icons/silk/application_view_detail.png')} detail", [:purchasing, @quotation_request]

= render :partial => 'form'
