- title "Direct Sale"

#customer
  #customer-title Invoice


%table#meta
  %tr
    %td.meta-head Number #
    %td= @direct_sale.number
  %tr
    %td.meta-head Customer Name
    %td= @direct_sale.customer
  %tr
    %td.meta-head Date
    %td= @direct_sale.tanggal



%table#items
  %tr
    %th.number No.
    %th.name Item
    %th.quantity Qty
    %th.price Unit Price
    %th.price Total
    - @direct_sale.entries.each_with_index do |entry, i|
      %tr.item-row
        %td= (i+1)
        %td.name=  entry.item.name
        %td.qty= entry.quantity
        %td.price= entry.price
        %td.price= entry.total_price

%table#metabottom
  %tr
    %td.metabottom-head Total
    %td ---
  %tr
    %td.metabottom-head  Discount
    %td ---
  %tr
    %td.metabottom-head PPN 10%
    %td ---
  %tr
    %td.metabottom-head <b>Total</b>
    %td ---


