- title "Sales Invoice"

#customer
  #customer-title Faktur

%table#metaleft
  %tr
    %td.metaleft-head Kapada :
    %td= @sales_invoice.delivery_orders.map(&:customer).uniq.join(', ')
  %tr
    %td.metaleft-head Telp :
    %td
  %tr
    %td.metaleft-head Alamat :
    %td

%table#meta
  %tr
    %td.meta-head Nomor #
    %td= @sales_invoice.number
  %tr
    %td.meta-head Nomor S.J. #
    %td= @sales_invoice.delivery_orders.map(&:number).join(', ')
  %tr
    %td.meta-head Tanggal
    %td= @sales_invoice.user_date
  %tr
    %td.meta-head Jatuh Tempo
    %td= @sales_invoice.due_time

%table#items
  %tr
    %th.number No.
    %th.quantity Kode Barang
    %th.name Nama Barang
    %th.quantity Qty
    %th.price Harga Satuan
    %th.price Total Bruto
    %th.disc Disc
    %th.price Total Netto
  - @sales_invoice.delivery_orders.each do |delivery_order|
    - delivery_order.entries.each_with_index do |entry, i|
      %tr.item-row
        %td= (i+1)
        %td.qty= entry.item.code
        %td.name=  entry.item.name
        %td.qty= entry.quantity
        %td.price= entry.item.purchase_price
        %td.price
        %td.price
        %td.price

%table#metabottom
  %tr
    %td.metabottom-head Total
    %td 
  %tr
    %td.metabottom-head  Discount
    %td 
  %tr
    %td.metabottom-head PPN 10%
    %td 
  %tr
    %td.metabottom-head <b>Total</b>
    %td 


