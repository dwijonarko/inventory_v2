- title "Sales Orders"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Transactions', transactions_path), |
    'Sales', 'Sales Order' ] |
  #top_right_link
    - form_for @search do |f|
      = f.text_field :number_like
      = f.submit 'search'

  = sidemenu @tab

= hint 'Click "Create Sales Order" button to add new Sales Order'

#subheader
  %h3 Transaction Sales Order
  #subheader-menu
    = link_to "#{image_tag('icons/silk/add.png')} Create Sales Order", new_sales_sales_order_path, :class => 'main_link'

%table.list
  %tr
    %th Number
    %th Quotation
    %th Tanggal
    %th.actions Actions
  - for sales_order in @sales_orders
    %tr
      %td= link_to h(sales_order.number), [:sales, sales_order]
      %td= h sales_order.quotation.nil? ? 'Without Quotation' : sales_order.quotation.number
      %td= h sales_order.tanggal
      %td.actions
        = link_to image_tag('icons/silk/application_form_edit.png'), edit_sales_sales_order_path(sales_order)
        = link_to image_tag('icons/silk/delete.png'), sales_sales_order_path(sales_order), :confirm => 'Are you sure?', :method => :delete


