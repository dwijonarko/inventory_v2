- semantic_form_for @customer do |f|
  = f.error_messages
  - f.inputs "Profile", :class => "form_section" do
    = f.input :code
    - f.semantic_fields_for :profile do |p|
      %li.string
        = p.label :first_name, "Full name"
        .inline
          = p.text_field :first_name
          %br
          %p.inline-hints.inline-labels First name
        .inline
          = p.text_field :last_name
          %br
          %p.inline-hints.inline-labels Last name
      = p.input :address, :input_html => { :rows => 2, :cols => 30 }
      %li.string
        = p.label :phone, "Telephone / Fax"
        .inline
          = p.text_field :phone
          %br
          %p.inline-hints.inline-labels phone
        .inline
          = p.text_field :fax
          %br
          %p.inline-hints.inline-labels fax
      = f.input :attention
      = f.input :default_top, :label => "Default T.O.P"
      = f.input :price_list, :include_blank => "-- select price list --", :input_html => { :class => "select filter" }
  - f.inputs "Tax Information", :class => "form_section" do
    - f.semantic_fields_for :tax_profile do |tax|
      %li.string
        = tax.label :first_name, "Full name"
        .inline
          = tax.text_field :first_name
          %br
          %p.inline-hints.inline-labels First name
        .inline
          = tax.text_field :last_name
          %br
          %p.inline-hints.inline-labels Last name
      = tax.input :address, :input_html => { :rows => 2, :cols => 30 }, :as => :text
      = tax.input :postal_code
      = tax.input :npwp_number, :label => "NPWP"
  %fieldset.buttons
    %button#primary-button{ :type => "submit" }
      = image_tag 'icons/silk/disk.png'
      Save customer
