- title "Purchasing::Quotation Request"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Transactions', transactions_path), |
    'Purchasing', |
    link_to('Quotation Request', purchasing_quotation_requests_path), |
    "Quotation Request # #{@quotation_request.number}" ] |

- content_for :top_right_link do
  = link_to image_tag('icons/silk/page_white_acrobat.png'), '#', :title => "Download quotation request in PDF format"
  = link_to image_tag('icons/silk/email_go.png'), send_request_purchasing_quotation_request_path(@quotation_request), :title => "Send quotation request to suppliers"

  = sidemenu @tab

- content_for :main_act do
  = link_to "#{image_tag('icons/silk/application_form_edit.png')} Edit Quotation Request", edit_purchasing_quotation_request_path(@quotation_request), :class => 'main_link'

#dialog_form
  .two_columns
    %p
      %span.light.transaction_label Number
      %strong= @quotation_request.number
    %p
      %span.light.transaction_label Date
      %strong= @quotation_request.request_date.to_s(:long)
%p
  %span.light.transaction_label Description
%p{ :style => "overflow:hidden; margin-bottom:20px;" }
  %strong= @quotation_request.description
%p
  %span.light.transaction_label Intended Suppliers
%p{ :style => "overflow:hidden; margin-bottom:20px;" }
  %strong= @quotation_request.suppliers.collect { |supp| link_to(supp.name, supp) }.join(', ')

%table.list
  %thead
    %tr
      %th.td_5 No.
      %th Item
      %th Qty
  %tbody
    - @quotation_request.entries.each_with_index do |entry, i|
      %tr
        %td.tdr.td_5= (i+1)
        %td= link_to h(entry.item.name), entry.item
        %td.tdr= entry.quantity
