- title "Edit Material Request"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Transactions', transactions_path), |
    'Purchasing', |
    link_to('Material Request', purchasing_material_requests_path), |
    link_to(@material_request.number, purchasing_material_request_path(@material_request)), |
    'Edit Material Request' ] |

  = sidemenu @tab

#subheader
  %h3= "Edit Material Request # #{@material_request.number}"
  #subheader-menu
    = link_to "#{image_tag('icons/silk/arrow_left.png')} back to list", purchasing_material_requests_path
    &bull;
    = link_to "#{image_tag('icons/silk/application_view_detail.png')} detail", purchasing_material_request_path(@material_request)

= render :partial => 'form'
