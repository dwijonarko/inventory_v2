- title "Transaction Type"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Administrations', administrations_path), |
    link_to('Transaction types', transaction_types_path), |
    "#{@transaction_type.code}" ] |

#subheader
  %h3= "Transaction Type #{@transaction_type.code}"
  #subheader-menu
    = link_to "#{image_tag('icons/silk/arrow_left.png')} back", transaction_types_path
    &bull;
    = link_to "#{image_tag('icons/silk/user_edit.png')} edit", edit_transaction_type_path(@transaction_type)

= hint ""
= sidemenu @tab

%p 
  Code:
  %strong= @transaction_type.code
%p
  Description:
  %strong= @transaction_type.description
%p
  Direction:
  %strong= @transaction_type.direction
%p
  Negate:
  %strong= @transaction_type.negate
%p
  Alter Date:
  %strong= @transaction_type.alter_date
