<% content_for :breadcrumb do %>
  <%= breadcrumb [ link_to('Administrations', administrations_path),
    link_to('Categories', categories_path),
    "#{@category.fullcode}" ]
  %>

  <%= sidemenu @tab %>
<% end -%>

<%= hint "Click 'Create Category' to add new category" %>
<div id="subheader">
  <h3><%= @category.name %></h3>
  <div id="subheader-menu">
    <%= link_to "#{image_tag('icons/silk/arrow_left.png')} back", categories_path %> &bull;
    <%= link_to "#{image_tag('icons/silk/application_form_edit.png')} edit", edit_category_path(@category) %>
  </div>
</div>

<div id="dialog_form">
  <% title "Category" %>

  <p>
    <strong>Category:</strong>
    <%=h @category.parent.try(:name) %>
  </p>
  <p>
    <strong>Name:</strong>
    <%=h @category.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%=h @category.description %>
  </p>
</div>
