<% semantic_form_for @item do |f| %>
  <% f.inputs do %>
    <%= f.input :code %>
    <%= f.input :name %>
    <%= f.input :category_id %>
    <%= f.input :description %>
  <% end -%>
  <fieldset class="buttons">
    <button type="submit"><%= image_tag 'icons/silk/disc.png' %> Save Item</button>
  </fieldset>
<% end %>
