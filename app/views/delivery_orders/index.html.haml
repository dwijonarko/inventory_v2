- title "Delivery Orders"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Transactions', transactions_path), |
    'Sales', 'Delivery Orders' ] |

  = sidemenu @tab

= hint 'Click "Create Delivery Order" button to add new Delivery Order'

#subheader
  %h3 Delivery Order
  #subheader-menu
    = link_to "#{image_tag('icons/silk/add.png')} Create Delivery Order", new_delivery_order_path, :class => 'main_link'


%table.list
  %thead
    %tr
      %th Number
      %th Code SO
      %th Date
      %th.action Action
  %tbody
    - for delivery_order in @delivery_orders
      %tr
        %td= link_to h(delivery_order.number), [delivery_order]
        %td= h delivery_order.sales_order.number
        %td= h delivery_order.do_date
        %td= h delivery_order.created_at
        %td.actions
          = link_to image_tag('icons/silk/application_form_edit.png'), edit_delivery_order_path(delivery_order)
          = link_to image_tag('icons/silk/delete.png'), delivery_order_path(delivery_order), :confirm => 'Are you sure?', :method => :delete

