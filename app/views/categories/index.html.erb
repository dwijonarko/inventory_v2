<% title "Categories" %>

<% javascript 'categories' %>
<% content_for :breadcrumb do %>
  <%= breadcrumb [ link_to("Administrations", administrations_path), link_to("Categories", categories_path) ] %>
  <div id="top_right_link">
    <% form_for @search do |f| %>
     <%= f.text_field :code_or_name_like %>
     <%= f.submit "Search" %>
    <% end %>
  </div>
<% end -%>

<% content_for :main_act do %>
  <%= link_to "#{image_tag('icons/silk/add.png')} Create new category", new_category_path, :class => "main_link new_category" %>
<% end -%>
<%= sidemenu %>

<table id="categories_list" class="list">
  <tr>
    <th></th>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th class="actions">Actions</th>
  </tr>
  <%= render @categories %>
  <tr>
    <td colspan="5"><%= will_paginate @categories %></td>
  </tr>
</table>
