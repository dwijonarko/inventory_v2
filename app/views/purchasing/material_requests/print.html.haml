- title "Material Reuquest"

#customer
  #customer-title Permintaan Barang

%table#meta
  %tr
    %td.meta-head Nomor M.R #
    %td= @material_request.number
  %tr
    %td.meta-head Requester
    %td= @material_request.requester
  %tr
    %td.meta-head Tanggal
    %td= @material_request.userdate.to_s(:long)
  %tr
    %td.meta-head Reference
    %td.cost= @material_request.reference

%table#items
  %tr
    %th.number No.
    %th.quantity Kode Barang
    %th.name Nama Barang
    %th.quantity Qty
    %th.date Est.Tgl.Pengiriman
  - @material_request.entries.each_with_index do |entry, i|
    %tr.item-row
      %td= (i+1)
      %td.qty= entry.item.code
      %td.name=  entry.item.name
      %td.qty= entry.quantity
      %td.price= entry.estimated_delivery_date.to_s(:long)

