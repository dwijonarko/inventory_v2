<% title "Service #{@service.name}" %>

<div id='subheader'>
  <h3><%=h "#{@service.code} :: #{@service.name}" %></h3>
  <div id='subheader-menu'>
    <%= link_to "#{image_tag('icons/silk/arrow_left.png')} back", services_path %> &bull;
    <%= link_to "#{image_tag('icons/silk/application_form_edit.png')} edit", edit_service_path(@service), :title => "Edit Service #{@service.code}" %>
  </div>
</div>

  <% content_for :breadcrumb do %>
    <%= breadcrumb [ link_to("Administrations", administrations_path),
      link_to("Services", services_path),
      @service.name ] %>
  <% end -%>

  <%= sidemenu %>
  <%= hint "Click 'edit' to edit this service" %>

  <fieldset class="form_section">
    <legend>Service Attributes</legend>
    <p class="single-column">
      <span class="light transaction_label">Code</span>
      <strong><%= @service.code %></strong>
    </p>
    <p class="single-column">
      <span class="light transaction_label">Category</span>
      <strong><%= link_to @service.category.name, @service.category %></strong>
    </p>
    <p class="single-column">
      <span class="light transaction_label">Name</span>
      <strong><%= @service.name %></strong>
    </p>
    <p class="single-column">
      <span class="light transaction_label">Description</span>
      <strong><%=h @service.description %></strong>
    </p>
  </fieldset>
