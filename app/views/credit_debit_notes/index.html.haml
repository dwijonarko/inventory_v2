- title "Credit Debit Notes"
- content_for :breadcrumb do
  = breadcrumb [ link_to('Transactions', transactions_path), |
    link_to('Credit Debit Note', credit_debit_notes_path) ] |
  #top_right_link
    - form_for @search do |f|
      = f.text_field :number_or_supplier_name_or_customer_profile_first_name_like
      = f.submit 'search'

  = sidemenu @tab

= hint 'Click "Create Credit / Debit Note" to add new Credit / Debit Note'

#subheader
  %h3 Material Requests
  #subheader-menu
    -#= link_to_if((params[:state] != 'all'), "all", purchasing_material_requests_path(:state => "all"))
    -#&bull;
    -#= link_to_if((params[:state] != 'closed'), "closed", purchasing_material_requests_path(:state => "closed"))
    -#&bull;
    -#= link_to_if((params[:state] && params[:state] != 'open'), "open", purchasing_material_requests_path(:state => "open"))
    -#&bull;
    = link_to("#{image_tag('icons/silk/add.png')} Create Credit / Debit Note", new_credit_debit_note_path, :class => 'main_link')

%table
  %tr
    %th Company
    %th Number
    %th Customer
    %th Supplier
    %th User date
    %th Note
    %th Credit
  - for credit_debit_note in @credit_debit_notes
    %tr
      %td= h credit_debit_note.company_id
      %td= h credit_debit_note.number
      %td= h credit_debit_note.customer_id
      %td= h credit_debit_note.supplier_id
      %td= h credit_debit_note.user_date
      %td= h credit_debit_note.note
      %td= h credit_debit_note.credit
      %td= link_to 'Show', credit_debit_note
      %td= link_to 'Edit', edit_credit_debit_note_path(credit_debit_note)
      %td= link_to 'Destroy', credit_debit_note, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Credit Debit Note", new_credit_debit_note_path
