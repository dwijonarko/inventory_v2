- title "Role"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Administrations', administrations_path), |
    'Account', link_to('Roles', roles_path), @role.name ] |

  = sidemenu @tab

= hint 'Click "Edit role" button to edit role'

#subheader
  %h3= @role.name
  #subheader-menu
    = link_to "#{image_tag('icons/silk/arrow_left.png')} back", roles_path
    &bull;
    = link_to "#{image_tag('icons/silk/application_form_edit.png')} edit", edit_role_path(@role)

%fieldset.form_section
  %legend Privileges
  %p.single-column
    %span.light Privileges
    = @role.privileges.collect { |p| p.resource.titleize }.join(', ')
