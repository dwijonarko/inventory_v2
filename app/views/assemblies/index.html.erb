<% cache do %>
  <% title "Assembling" %>
  <% javascript "assemblies" %>

  <% content_for :breadcrumb do %>
    <%= breadcrumb [ link_to("Administrations", administrations_path),
                     link_to("Assembling", assemblies_path) ] %>
  <% end -%>

  <% content_for :main_act do %>
    <%= link_to "#{image_tag('icons/silk/add.png')} Create new Assembling", new_assembly_path, :class => "main_link new_assemblies", :title => "Create New Assembling" %>
  <% end -%>  
  <%= sidemenu %>

  <table class="list">
    <tr>
      <th>Type</th>
      <th>Number</th>
      <th>Item Code</th>
      <th class="actions">Actions</th>
    </tr>
    <% for assembly in @assemblies %>
      <tr>
        <td><%= link_to assembly.type, assembly %></td>
        <td><strong><%=h plu.item.name %></strong> <em>(<%=h plu.item.code %>)</em></td>
        <td><strong><%=h plu.item.name %></strong> <em>(<%=h plu.item.code %>)</em></td>
         <td class="actions">
           <%= link_to image_tag('icons/silk/application_form_edit.png'), edit_plu_path(plu), :title => 'Edit PLU' %>
          <%= link_to image_tag('icons/silk/delete.png'), plu, :confirm => 'Are you sure?', :method => :delete, :title => 'Delete PLU' %>
        </td>
      </tr>
    <% end %>
  </table>
<% end -%>

