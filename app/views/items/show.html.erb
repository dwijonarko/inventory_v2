<% cache do %>
  <div id="dialog_form">
    <% title "Item #{@item.name}" %>

    <% content_for :breadcrumb do %>
      <%= breadcrumb [ link_to("Administrations", administrations_path),
        link_to("Items", items_path),
        @item.name ] %>
    <% end -%>

    <% content_for :main_act do %>
      <%= link_to "#{image_tag('icons/silk/application_form_edit.png')} Edit #{@item.code}", edit_item_path(@item), :class => "main_link edit_item", :title => "Edit Item #{@item.code}" %>
    <% end -%>

    <%= sidemenu %>

    <p>
      <strong>Category:</strong>
      <%= @item.category_tree %>
    </p>
    <p>
      <strong>Code:</strong>
      <%=h @item.code %>
    </p>
    <p>
      <strong>Name:</strong>
      <%=h @item.name %>
    </p>
    <p>
      <strong>Description:</strong>
      <%=h @item.description %>
    </p>
    <div>
      <strong>Units:</strong>
      <% unless @item.units.blank? %>
        <ol>
          <% @item.units.each do |unit| %>
            <li><%=h unit.name %></li>
          <% end -%>
        </ol>
      <% end -%>
    </div>
  </div>
<% end -%>
