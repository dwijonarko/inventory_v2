<% title "#{@supplier.code} :: #{@supplier.name}" %>

<% if @supplier.plus.blank? %>
  <div class="flash_notice">
    There're no PLU associated with any items or you haven't create one before.
    <%= link_to "Add PLU for this supplier", new_plu_path(:supplier_id => @supplier.id) %>
  </div>
<% end %>

<% content_for :breadcrumb do %>
  <%= breadcrumb [ link_to("Administrations", administrations_path),
                   link_to("Suppliers", suppliers_path),
                   "#{@supplier.name}" ] %>
<% end -%>

<div id='subheader'>
  <h3><%=h "#{@supplier.code} :: #{@supplier.name}" %></h3>
  <div id='subheader-menu'>
    <%= link_to "#{image_tag('icons/silk/arrow_left.png')} back", suppliers_path %> &bull;
    <%= link_to "#{image_tag('icons/silk/application_form_edit.png')} edit", edit_supplier_path(@supplier), :title => "edit supplier" %>
  </div>
</div>

<%= sidemenu %>
<%= hint "click 'Edit supplier' to edit supplier" %>

<fieldset class='form_section'>
  <legend>Supplier data</legend>
  <div class="two_columns">
    <p>
      <span class="light">Code</span>
      <strong><%= @supplier.code %></strong>
    </p>
    <p>
      <span class="light">Name</span>
      <strong><%= @supplier.name %></strong>
    </p>
    <p>
      <span class="light">Address</span>
      <strong><%= @supplier.profile.address %></strong>
    </p>
    <p>
      <span class="light">Total Credit</span>
      <strong><%= local_currency(@supplier.total_credit) %></strong>
    </p>
  </div>
</fieldset>
