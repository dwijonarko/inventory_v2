<% title 'Production :: Completion' %>

<% content_for :breadcrumb do %>
  <%= breadcrumb [ link_to('Transaction', transactions_path), link_to('Production', production_path), link_to(@work_order.number, [:production, @work_order]),  'Completions'] %>
  <div id="top_right_link">
  </div>
  <%= sidemenu @tab %>
<% end %>
<%= hint '' %>

<div id="subheader">
  <h3>Work Order <%= @work_order.number %> completion progress</h3>
  <div id="subheader-menu">
    <%= link_to "#{image_tag('icons/silk/add.png')} Add progress", new_production_work_order_completion_path(@work_order), :class => 'main_link' %>
  </div>
</div>

<table class="list">
  <thead>
    <tr>
      <th>End Produk</th>
      <th>Total Quantity</th>
      <th>Completed</th>
    </tr>
  </thead>
  <tbody>
    <% @work_order.entries.each do |entry| %>
      <tr>
        <td><%= entry.assembly.item.name %></td>
        <td class="numbers"><%= entry.quantity %></td>
        <td class="numbers"><%= entry.completions.map(&:quantity).sum %></td>
      </tr>
    <% end %>
  </tbody>
</table>
