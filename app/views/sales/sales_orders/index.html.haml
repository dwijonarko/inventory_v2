- title "Sales Orders"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Transactions', transactions_path), |
    'Sales', 'Sales Order' ] |

  = sidemenu @tab

- content_for :main_act do
  = link_to "#{image_tag('icons/silk/add.png')} New Sales Order", new_sales_sales_order_path, :class => 'main_link'

%table.list
  %tr
    %th Number
    %th Quotation
    %th Tanggal
    %th Status
    %th.actions Actions
  - for sales_order in @sales_orders
    %tr
      %td= link_to h(sales_order.number), [:sales, sales_order]
      %td= h sales_order.quotation_id
      %td= h sales_order.tanggal
      %td= h sales_order.status
      %td.actions
        = link_to image_tag('icons/silk/application_form_edit.png'), edit_sales_sales_order_path(sales_order)
        = link_to image_tag('icons/silk/delete.png'), sales_sales_order_path(sales_order), :confirm => 'Are you sure?', :method => :delete


