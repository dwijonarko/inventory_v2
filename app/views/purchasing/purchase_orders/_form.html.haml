- semantic_form_for [:purchasing, @purchase_order] do |f|
  = f.error_messages
  - f.inputs "Purchase Order", :class => "form_section" do
    = f.input :number
    = f.input :material_request
    = f.input :supplier
    = f.input :term_of_payment, :input_html => { :rows => 2 }
    = f.input :po_date, :as => :string, :input_html => { :class => "datepicker" }
    = f.input :attention
    = f.input :notes, :input_html => { :rows => 3 }
  %fieldset.buttons
    %button{ :type => "submit" }
      = image_tag 'icons/silk/disk.png'
      Save Purchase Order
