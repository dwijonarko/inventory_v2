- form_for @credit_debit_note do |f|
  = f.error_messages
  %p
    = f.label :company_id
    %br
    = f.text_field :company_id
  %p
    = f.label :number
    %br
    = f.text_field :number
  %p
    = f.label :customer_id
    %br
    = f.text_field :customer_id
  %p
    = f.label :supplier_id
    %br
    = f.text_field :supplier_id
  %p
    = f.label :user_date
    %br
    = f.date_select :user_date
  %p
    = f.label :note
    %br
    = f.text_area :note
  %p
    = f.label :credit
    %br
    = f.check_box :credit
  %p
    = f.submit
