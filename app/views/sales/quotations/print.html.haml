#customer
  #customer-title Quotation


%table#metaleft
  %tr
    %td.metaleft-head To :
    %td= @quotation.customer
  %tr
    %td.metaleft-head ATTN :
    %td --
  %tr
    %td.metaleft-head Fax.NO :
    %td
  %tr
    %td.metaleft-head PHN.NO :
    %td

%table#meta
  %tr
    %td.meta-head Number #
    %td= @quotation.number
  %tr
    %td.meta-head Date
    %td= @quotation.tanggal_berlaku
  %tr
    %td.meta-head From
    %td.cost --


