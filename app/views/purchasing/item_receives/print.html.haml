- title "Bukti Terima Barang"

#customer
  #customer-title Bukti Terima Barang


%table#metaleft
  %tr
    %td.metaleft-head  Dari :
    %td

%table#meta
  %tr
    %td.meta-head Nomor BTB #
    %td= @item_receive.number
  %tr
    %td.meta-head Tanggal
    %td= @item_receive.user_date.to_s(:long)

%table#items
  %tr
    %th.number No.
    %th.quantity Kode Barang
    %th.quantity Qty
    %th.name Nama Barang
    %th.desc Keterangan
  - @item_receive.entries.each_with_index do |entry, i|
    %tr.item-row
      %td= (i+1)
      %td.qty= entry.item.code
      %td.qty= entry.quantity
      %td.name=  entry.item.name
      %td.desc

<p align="right">Penerima,&nbsp;&nbsp;&nbsp;&nbsp;</p>

