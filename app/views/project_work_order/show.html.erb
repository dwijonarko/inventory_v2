<% title "Project #{@project.name} SPK" %>

<div id='subheader'>
  <h3><%=h "#{@project.number} :: #{@project.name} :: SPK" %></h3>
  <div id='subheader-menu'>
    <%= link_to "#{image_tag('icons/silk/arrow_left.png')} back", @project %> &bull;
    <%= link_to "#{image_tag('icons/silk/application_form_edit.png')} edit", edit_project_spk_path(@project), :title => "Edit project #{@project.number} SPK" %>
  </div>
</div>

<% content_for :breadcrumb do %>
  <%= breadcrumb [ link_to("Transactions", transactions_path),
    link_to("Projects", projects_path),
    link_to(@project.number, @project), "SPK" ] %>
<% end -%>

<%= sidemenu %>
<%= hint "" %>

<table class="detailed">
  <tr>
    <td class="keys">Number</td>
    <td class="value"><%=h @project.spk.number %></td>
  </tr>
  <tr>
    <td class="keys">Date</td>
    <td class="value"><%=h @project.spk.user_date.to_s(:long) %></td>
  </tr>
  <tr>
    <td class="keys">Validity</td>
    <td class="value"><%= @project.spk.valid_since.to_s(:long) %> - <%= @project.spk.valid_thru.to_s(:long) %></td>
  </tr>
  <tr>
    <td class="keys">Payment Term</td>
    <td class="value"><%=h @project.spk.payment_term %></td>
  </tr>
</table>

