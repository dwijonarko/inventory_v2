- title "Currency"

- content_for :breadcrumb do
  = breadcrumb [ link_to("Administrations", administrations_path), link_to("Currencies", currencies_path) ]

  = sidemenu @tab

- content_for :main_act do
  = link_to "#{image_tag('icons/silk/application_form_edit.png')} Edit Currency", edit_currency_path(@currency), :class => 'main_link'
  
#dialog_form
  .two_columns
    %p
      %span.light.transaction_label Code
      %strong= @currency.code
    %p
      %span.light.transaction_label Name
      %strong= @currency.name
    %p
      %span.light.transaction_label Symbol
      %strong= @currency.symbol



