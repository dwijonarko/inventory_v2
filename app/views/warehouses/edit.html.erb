<% title "Edit Warehouse" %>

<% content_for :breadcrumb do %>
  <%= breadcrumb [ link_to("Administrations", administrations_path),
                   link_to("Warehouses", warehouses_path),
                   "Edit Warehouse" ] %>
<% end -%>

<% content_for :main_act do %>
  <%= link_to "#{image_tag('icons/silk/zoom_in.png')} Warehouse detail", @warehouse, :class => "main_link warehouse_detail" %>
<% end -%>

<%= sidemenu %>
<%= hint "Both warehouse code and name must be unique throughout your company" %>

<h3>
  Edit <%= @warehouse.name %>
  <%= link_to "#{image_tag('icons/silk/arrow_left.png')} back to warehouse list", warehouses_path, :class => "back_link" %>
</h3>
<%= render :partial => 'form' %>
