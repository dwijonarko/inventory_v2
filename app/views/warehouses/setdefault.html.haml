- title "Set #{@warehouse.code} as default warehouse"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Administration', administrations_path), |
    link_to('Warehouses', warehouses_path), |
    link_to(@warehouse.code, @warehouse), |
    'Set as default warehouse' ] |

= sidemenu @tab
- content_for :main_act do
  = link_to "#{image_tag('icons/silk/application_form_edit.png')} Edit #{@warehouse.code}", edit_warehouse_path(@warehouse), :class => 'main_link'

#dialog_form
  %h2 Set #{@warehouse.code} as default warehouse?
  - form_for @warehouse, :url => { :action => :setasdefault } do |f|
    %div
      = f.hidden_field :default, :value => 1
      %button{ :type => :submit } 
        = "#{image_tag('icons/silk/flag_green.png')} Set #{@warehouse.code} as default warehouse"
