- title "Edit Purchasing :: Purchase Return"

- content_for :breadcrumb do
  = breadcrumb [ link_to('Transactions', transactions_path), |
    'Purchasing', |
    link_to('Purchase Returns', purchasing_purchase_returns_path), |
    link_to(@purchase_return.number, [:purchasing, @purchase_return]), |
    'Edit' ] |

  = sidemenu @tab

= hint "Select one of the transaction type first to show the transaction form"

#subheader
  %h3= "Edit purchase return #{@purchase_return.number}"
  #subheader-menu
    = link_to "#{image_tag('icons/silk/arrow_left.png')} back to list", purchasing_purchase_returns_path, :class => "back_link"
= render :partial => 'form'
