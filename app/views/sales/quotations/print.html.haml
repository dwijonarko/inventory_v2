%table#items
  %tr
    %th.number No.
    %th.name Item
    %th.quantity Qty
    %th.price Unit Price
    %th.price Disc (%)
    %th.price Total Price
  - @quotation.entries.each_with_index do |entry, i|
    %tr.item-row
      %td= (i+1)
      %td.name=  entry.item.name
      %td.qty= entry.quantity
      %td.price= entry.price
      %td.qty= entry.discount
      %td.cost= entry.total_price

