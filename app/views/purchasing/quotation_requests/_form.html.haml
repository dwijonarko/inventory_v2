- form_for @purchasing/quotation_request do |f|
  = f.error_messages
  %p
    = f.label :company_id
    %br
    = f.text_field :company_id
  %p
    = f.label :number
    %br
    = f.text_field :number
  %p
    = f.label :request_date
    %br
    = f.date_select :request_date
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.submit
