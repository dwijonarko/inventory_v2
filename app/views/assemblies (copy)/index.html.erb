<% cache do %>
  <% title "Assembling" %>
  <% javascript "assemblies" %>

  <% content_for :breadcrumb do %>
    <%= breadcrumb [ link_to("Administrations", administrations_path),
                     link_to("Assembling", assemblies_path) ] %>
  <% end -%>

  <% content_for :main_act do %>
    <%= link_to "#{image_tag('icons/silk/add.png')} Create new Assembling", new_assembly_path, :class => "main_link new_assemblies", :title => "Create New Assembling" %>
  <% end -%>

  <%= sidemenu %>

  <table class="list">
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th class="actions">Actions</th>
    </tr>
    <% for assembly in @assemblies %>
      <tr>
        <td><%= link_to assembly.code, assembly %></td>
        <td><strong><%=h assembly.name %></strong> </td>
         <td class="actions">
           <%= link_to image_tag('icons/silk/application_form_edit.png'), edit_assembly_path(assembly), :title => 'Edit Assembly' %>
          <%= link_to image_tag('icons/silk/delete.png'), assembly, :confirm => 'Are you sure?', :method => :delete, :title => 'Delete Assembly' %>
        </td>
      </tr>
    <% end %>
  </table>
<% end -%>
