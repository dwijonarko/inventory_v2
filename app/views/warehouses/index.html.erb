<% title "Warehouses" %>

<% content_for :breadcrumb do %>
  <%= breadcrumb [ link_to("Administrations", administrations_path), link_to("Warehouses", warehouses_path) ] %>
  <div id='top_right_link'>
    <%- form_for @search do |f| %>
      <%= f.text_field :code_or_name_or_address_like %>
      <%= f.submit 'search' %>
    <% end %>
  </div>
<% end -%>

<% content_for :main_act do %>
  <%= link_to "#{image_tag('icons/silk/add.png')} Create new warehouse", new_warehouse_path, :class => "main_link new_edit_warehouse", :title => "Create new warehouse" %>
<% end -%>

<%= sidemenu %>

<table class="list">
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Address</th>
    <th class="actions">Actions</th>
  </tr>

  <%= render @warehouses %>

</table>
