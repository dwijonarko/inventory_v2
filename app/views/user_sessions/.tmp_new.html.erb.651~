<% title "Sign In" %>

<div id="login">
  <%- if show_title? -%>
  <h1><%= image_tag 'icons/key.png' %> <%=h yield(:title) %> </h1>
  <%- end -%>
        
  <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <%- end -%>
          
  <% semantic_form_for @user_session do |f| %>
    <% f.inputs do %>
      <%= f.input :username, :required => false, :input_html => { :class => 'default' } %>
      <%= f.input :password, :required => false %>
    <% end -%>
    <fieldset class="buttons">
      <button type="submit"><%= image_tag 'icons/silk/lock_open.png' %> Sign In</button>
    </fieldset>
  <% end %>
</div>
