<% title "Project #{@project.name}" %>

<div id='subheader'>
  <h3><%=h "#{@project.number} :: #{@material_request.number} :: Edit" %></h3>
  <div id='subheader-menu'>
    <%= link_to "#{image_tag('icons/silk/arrow_left.png')} back", project_material_request_path(@project, @material_request) %>
  </div>
</div>

<% content_for :breadcrumb do %>
  <%= breadcrumb [ link_to("Transactions", transactions_path),
    link_to("Projects", projects_path),
    link_to(@project.number, @project),
    link_to("Material Requests", project_material_requests_path(@project)),
    link_to(@material_request.number, project_material_request_path(@project, @material_request)),
    "Edit" ] %>
<% end -%>

