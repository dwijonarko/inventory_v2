- title "Customer Prices"

- cache do
  - content_for :breadcrumb do
    = breadcrumb [ link_to('Administration', administrations_path), |
      link_to('Customers', customers_path), |
      link_to("#{@customer.code} &bull; #{@customer.profile.full_name}", @customer), |
      'Special Prices' ] |

  - content_for :main_act do
    = link_to "#{image_tag('icons/silk/application_form_edit.png')} Edit Special Prices", edit_prices_customer_path(@customer), :class => 'main_link'

  %table#customer_prices.list
    %tr
      %th.number.index No.
      %th Item
      %th Prices
    - @customer_prices.each_with_index do |price, i|
      %tr
        %td= h i+1
        %td
          = h price['item'].code
          %br
          = h price['item'].name
        %td
          - for p in price['prices']
            %span.customer_prices= p
