<% title "Warehouses" %>

<% content_for :breadcrumb do %>
  <%= breadcrumb [ link_to("Administrations", administrations_path), link_to("Warehouses", warehouses_path) ] %>
  <div id='top_right_link'>
    <%- form_for @search do |f| %>
      <%= f.text_field :code_or_name_or_address_like %>
      <%= f.submit 'search' %>
    <% end %>
  </div>
<% end -%>

<%= hint "Click 'Create Warehouse' to add new warehouse" %>
<div id="subheader">
  <h3>Warehouses</h3>
  <div id="subheader-menu">
    <%= link_to "#{image_tag('icons/silk/add.png')} Create Warehouse", new_warehouse_path, :class => 'main_link' %>
  </div>
</div>

<%= sidemenu %>

<table class="list">
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Address</th>
    <th class="actions">Actions</th>
  </tr>

  <%= render @warehouses %>

</table>
