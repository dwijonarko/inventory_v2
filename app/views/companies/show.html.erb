<% title "Account :: Company" -%>
<% content_for :breadcrumb do -%>
  <%= 
    breadcrumb [ link_to('Administrations', administrations_path),
    'Company', "#{@company.name}" ]
  %>
<% end %>

<%= sidemenu @tab %>

<%= hint "Click 'edit' to edit this company's data" %>

<div id="subheader">
  <h3><%= @company.name %></h3>
  <div id="subheader-menu">
    <%= link_to "#{image_tag('icons/silk/application_form_edit.png')} edit", edit_company_path(@company) %>
  </div>
</div>

<fieldset class='form_section'>
  <legend>Company</legend>
  <p class="single-column">
    <span class="light">Name</span>
    <strong><%=h @company.name %></strong>
  </p>

  <p class="single-column">
    <span class="light">Address</span>
    <strong><%=h @company.address %></strong>
  </p>

  <p class="single-column">
    <span class="light">Phone</span>
    <strong><%=h @company.phone %></strong>
  </p>
</legend>
