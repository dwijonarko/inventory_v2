<% title "Suppliers" %>
<% javascript "suppliers" %>

<% content_for :breadcrumb do %>
  <%= breadcrumb [ link_to("Administrations", administrations_path),
                   link_to("Suppliers", suppliers_path) ] %>
<% end -%>

<% content_for :main_act do %>
  <%= link_to "#{image_tag('icons/silk/add.png')} Create new supplier", new_supplier_path, :class => "main_link alter_record", :title => "Create new supplier" %>
<% end -%>

<%= sidemenu %>

<table class="list">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone / Fax</th>
      <th class="actions">Actions</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan="5"><%= will_paginate @suppliers %></td>
    </tr>
  </tfoot>
  <tbody>
    <%= render @suppliers %>
  </tbody>

</table>
